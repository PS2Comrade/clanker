# Base (can be empty; you can supply keys later via commands)
DISCORD_TOKEN=your_discord_bot_token_here
DEEPL_API_KEY=

# Optional default provider ("deepl", "libre", "lingva", "simply")
DEFAULT_PROVIDER=deepl

# Default URLs (can be overridden per guild through settings commands)
LIBRE_URL=https://libretranslate.com
LIBRE_API_KEY=
LINGVA_URL=https://lingva.ml
SIMPLY_URL=

# Behavior toggles
ENABLE_DMS=false
MAX_INPUT_CHARS=1800
SHOW_SOURCE_LANG=true
LOG_LEVEL=INFO

IGNORE_NUMERIC_LIKE=true
AUTO_MIN_WORDS=2
ONLY_WHEN_MENTIONED=false

# Language blacklist (env-level baseline, per guild additions possible)
BLACKLIST_LANGS=ID,ET,BG
APPLY_BLACKLIST_TO_COMMANDS=true

SKIP_ROMAN_HINDI=true
ROMAN_HINDI_STOPWORDS=kuch,bhi,apne,apna,apni,hisab,mat,karo,kr,karen,hai,hota,hoti,hote,ye,yaar,bhai,nahi,nahin,kyu,kyun,kya,mera,meri,mere,tera,teri,tere,hum,ham,tha,thi,the,vo,woh,se,ko,mein,me
ROMAN_HINDI_MIN_MATCHES=2

# Fast sync while developing (single guild ID); empty for global
SYNC_GUILD_ID=